{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

    "storageName": {
      "type": "string",
      "minLength": "3"
    },
    "storageSku": {
      "type": "string",
      "defaultValue": "Standard_LRS"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },    
    "webAppName": {
      "type": "string"
    },
    "planName": {
      "type": "string"
    }


  },
  "functions": [],
  "variables": {
    "storageName": "[concat(parameters('storageName') , 'stage'  )]",
    "blobcontainername": "[concat(parameters('storageName'),'/default/input')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageName')]",
      "apiVersion": "2021-04-01",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "[parameters('storageSku')]",
        "tier": "Standard"
      },
      "resources": [
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "/default/output",
          //  "name": "goodstorage12sfazvs/default/input",
          "dependsOn": [
            "[parameters('storageName')]"
          ]
        }
      ]

    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiversion": "2021-03-01",
      "name": "[parameters('planName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "S1"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-03-01",
      "name": "[parameters('webAppName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[parameters('planName')]",
        "[parameters('storageName')]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms' , parameters('planName'))]",
        "siteConfig": {
          "appSettings": [
            {
                "name": "storageAccessKey",
                "value":"[listKeys(parameters('storageName'), '2021-04-01').keys[0].value]"
                
            }
          ]
        }
      }
    }

  ],
  "outputs": {}
}
